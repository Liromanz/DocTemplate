<Window x:Class="DocTemplate.View.TemplateEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocTemplate.View"
        xmlns:view="clr-namespace:DocTemplate.CardViews.View;assembly=DocTemplate.CardViews"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Height="1000" Width="1800" Padding="10"
        MinWidth="1550" MinHeight="640"
        MaxHeight="{Binding Source={x:Static SystemParameters.MaximizedPrimaryScreenHeight}}"
        MaxWidth="{Binding Source={x:Static SystemParameters.MaximizedPrimaryScreenWidth}}"
        Foreground="White" 
        BorderThickness="1" BorderBrush="{DynamicResource MainColor}"
        WindowStyle="None" ResizeMode="CanResizeWithGrip" 
        AllowsTransparency="True"
        FontSize="20" Background="{DynamicResource BackgroundColor}" MouseDown="DragWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.6*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Background="{DynamicResource MainColor}" >
            <StackPanel Margin="10">
                <TextBlock Text="Шрифт" HorizontalAlignment="Center"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <ComboBox  Style="{StaticResource DefaultComboBox}" Margin="0,0,10,0"/>
                    <TextBox HorizontalAlignment="Stretch" Grid.Column="1" Style="{StaticResource DefaultTextBox}" />
                </Grid>
                <Grid Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="Ж" FontWeight="Bold" Style="{StaticResource SwitcherButton}" />
                    <Button Grid.Column="1" Content="К" FontStyle="Italic" Style="{StaticResource SwitcherButton}" />
                    <Button Grid.Column="2" Style="{StaticResource SwitcherButton}" >
                        <TextBlock TextDecorations="Underline" Text="Ч"/>
                    </Button>
                    <Button Grid.Column="3" Style="{StaticResource SwitcherButton}" >
                        <TextBlock TextDecorations="Strikethrough" Text="abc" />
                    </Button>
                    <Button Grid.Column="4" Content="x₂" Style="{StaticResource SwitcherButton}"/>
                    <Button Grid.Column="5" Content="x²" Style="{StaticResource SwitcherButton}"/>
                </Grid>
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="AB" Background="#7FFFFF00" VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="1"  Style="{StaticResource DefaultComboBox}" Margin="10,0,0,0"/>
                    <TextBlock Grid.Column="2" Text="AB" VerticalAlignment="Center" Foreground="Red" Margin="10,0,0,0"/>
                    <ComboBox Grid.Column="3"  Style="{StaticResource DefaultComboBox}" Margin="10,0,0,0"/>
                </Grid>

                <Separator Style="{StaticResource HorizontalSeparator}" Margin="10"/>

                <TextBlock Text="Абзац" HorizontalAlignment="Center"/>
                <Grid Margin="0,10,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="{StaticResource AligmentLeft}" Style="{DynamicResource SwitcherButton}" Width="40"/>
                    <Button Grid.Column="1" Content="{StaticResource AligmentCenter}" Style="{DynamicResource SwitcherButton}" Width="40"/>
                    <Button Grid.Column="2" Content="{StaticResource AligmentRight}" Style="{DynamicResource SwitcherButton}" Width="40"/>
                    <Button Grid.Column="3" Content="{StaticResource AligmentStretch}" Style="{DynamicResource SwitcherButton}" Width="40"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="{StaticResource LineSeparation}" Style="{DynamicResource SwitcherButton}" Width="40"/>
                    <ComboBox Grid.Column="1"  Style="{StaticResource DefaultComboBox}" Margin="0,0,20,0"/>
                </Grid>
                <Grid Margin="0,10,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="{StaticResource ListPoint}" Style="{DynamicResource SwitcherButton}" Width="40"/>
                    <Button Grid.Column="1" Content="{StaticResource ListNumber}" Style="{DynamicResource SwitcherButton}" Width="40"/>
                    <Button Grid.Column="2" Content="{StaticResource ListRomaNumber}" Style="{DynamicResource SwitcherButton}" Width="40"/>
                    <Button Grid.Column="3" Content="{StaticResource ListLetter}" Style="{DynamicResource SwitcherButton}" Width="40"/>
                </Grid>

                <Separator Style="{StaticResource HorizontalSeparator}" Margin="10"/>

                <TextBlock Text="Вставка" HorizontalAlignment="Center"/>
                <Button Content="Таблица" Style="{DynamicResource ControlButton}" Margin="5" Click="GoBack"/>
                <Button Content="Фотография" Style="{DynamicResource ControlButton}" Margin="5" Click="GoBack"/>
                <Button Content="Разрыв страница" Style="{DynamicResource ControlButton}" Margin="5" Click="GoBack"/>

                <Separator Style="{StaticResource HorizontalSeparator}" Margin="10"/>

                <TextBlock Text="Импорт" HorizontalAlignment="Center"/>
                <Button Content="Импорт документа" Style="{DynamicResource ControlButton}" Margin="5" Click="GoBack"/>
            </StackPanel>
        </Border>
        <view:BackButton Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left"  Margin="0,10"/>

        <RichTextBox Grid.Column="1" Width="664" Height="921"/>

        <Border Grid.Column="2" Background="{DynamicResource MainColor}">
            <Grid Margin="10,50,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ScrollViewer Template="{StaticResource DefaultScrollViewer}">
                    <StackPanel>
                        <TextBlock Text="Вставка" HorizontalAlignment="Center" Margin="50"/>
                        <TextBlock Text="Вставка" HorizontalAlignment="Center" Margin="50"/>
                        <TextBlock Text="Вставка" HorizontalAlignment="Center" Margin="50"/>
                        <TextBlock Text="Вставка" HorizontalAlignment="Center" Margin="50"/>
                        <TextBlock Text="Вставка" HorizontalAlignment="Center" Margin="50"/>
                        <TextBlock Text="Вставка" HorizontalAlignment="Center" Margin="50"/>
                        <TextBlock Text="Вставка" HorizontalAlignment="Center" Margin="50"/>
                        <TextBlock Text="Вставка" HorizontalAlignment="Center" Margin="50"/>
                        <TextBlock Text="Вставка" HorizontalAlignment="Center" Margin="50"/>
                    </StackPanel>
                </ScrollViewer>
                <StackPanel Grid.Row="1"  VerticalAlignment="Bottom">
                    <Separator Style="{StaticResource HorizontalSeparator}" Margin="10"/>
                    <Button Content="Сохранить и выйти" Style="{DynamicResource ControlButton}" Margin="10" Click="GoBack"/>
                    <TextBlock Text="Страниц: 2. Символов: 200. Последнее сохранение: 08.02.2022 12:40" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
        <view:WindowManager Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Top"/>
    </Grid>
</Window>
