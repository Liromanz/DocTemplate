<Window x:Class="DocTemplate.CardViews.View.DialogWindows.YesNoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocTemplate.CardViews.View.DialogWindows"
        mc:Ignorable="d"
        x:Name="UserControl"
        Foreground="White" FontSize="20" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
        WindowStyle="None" ResizeMode="NoResize" Background="Black" Opacity="50">
    <Grid  Height="236" Width="582" Background="#413F48">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock HorizontalAlignment="Left" Text="{Binding Path=DialogName, ElementName=UserControl}" FontSize="30"/>
            <Button Content="×" Padding="10,0,10,0" FontSize="23" Background="Transparent" BorderThickness="0" Foreground="White" Click="CloseDialog" Style="{DynamicResource HighlightButton}" HorizontalAlignment="Right"/>
            <TextBlock Grid.Row="1" HorizontalAlignment="Left" Text="{Binding Path=Description, ElementName=UserControl}" TextWrapping="Wrap" VerticalAlignment="Bottom"/>
            <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right">
                <Button Content="ОК" Style="{DynamicResource ControlButton}" VerticalAlignment="Bottom" Command="{Binding Path=ButtonCommand, ElementName=UserControl}"/>
                <Button Content="Отмена" Style="{DynamicResource ControlButton}" VerticalAlignment="Bottom" Click="CloseDialog" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
