<UserControl x:Class="DocTemplate.CardViews.View.WindowManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DocTemplate.CardViews.View"
             Foreground="Gray"
             FontSize="20"
             Padding="0,10,10,0"
             HorizontalAlignment="Right"
             VerticalAlignment="Top"
             mc:Ignorable="d" >
    <StackPanel Orientation="Horizontal">
        <Button Content="−" Padding="10,0,10,3" FontSize="23" Background="Transparent" BorderThickness="0" Foreground="White" Click="RollApplication" Style="{DynamicResource HighlightButton}"/>
        <Button Padding="10,0,10,0" Content="◻" FontSize="20" Background="Transparent" BorderThickness="0" Foreground="White" Height="28" Click="MaximizeApplication" Style="{DynamicResource HighlightButton}"/>
        <Button Content="×" Padding="10,0,10,0" FontSize="23" Background="Transparent" BorderThickness="0" Foreground="White" Click="CloseApplication" Style="{DynamicResource HighlightButton}"/>
    </StackPanel>
</UserControl>
